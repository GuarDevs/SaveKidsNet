        <div class="col-md-3">
            <img src="Filepath"
             alt="Person's Photo" class="img-fluid">
        </div>
        <!-- Right Column (Person's Information) -->
        <div class="col-md-6">
            <h2>@criminal.FirstName @criminal.LastName</h2>
            <p>Nationality / Gender: @criminal.Nationatily / @criminal.Gender</p>
            <p>Year / Place of birth: @criminal.DateOfBirth.Year / @criminal.PlaceOfBirth</p>
            <p>Hair / Eyes: @criminal.Hair / @criminal.Eyes</p>
            <p>Height / Weight: @criminal.Height / @criminal.Weight</p>
            <!-- Add more information as needed -->
        </div>
        }
    </div>
</div>
